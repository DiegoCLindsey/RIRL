<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.MainLoginActivity"
    tools:showIn="@layout/activity_main_login" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/TopMarginWeight">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <Space android:layout_weight="@integer/MarginWeight" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:text="@string/app_name" />

            <Space android:layout_weight="@integer/MarginWeight" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/TopMarginWeight">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/Buttons">

            <Space android:layout_weight="@integer/MarginWeight" />

            <Button
                android:id="@+id/newgame"
                android:layout_weight="@integer/TopMarginWeight"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/newgame" />

            <Space android:layout_weight="@integer/MarginWeight" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/Buttons">

            <Space android:layout_weight="@integer/MarginWeight" />

            <Button
                android:id="@+id/joingame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="@integer/TopMarginWeight"
                android:text="@string/joingame" />

            <Space android:layout_weight="@integer/MarginWeight" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/Buttons">

            <Space android:layout_weight="@integer/MarginWeight" />

            <Button
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="@integer/TopMarginWeight"
                android:text="@string/opciones" />

            <Space android:layout_weight="@integer/MarginWeight" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/TopMarginWeight" >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>